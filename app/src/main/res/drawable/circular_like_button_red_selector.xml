<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" android:id="@+id/circular_like_button">

            <solid
                android:color="@color/material_red_700"/>

        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" android:id="@+id/circular_like_button">

            <solid
                android:color="@color/material_red_100"/>

        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" android:id="@+id/circular_like_button">

            <solid
                android:color="@color/red_themed"/>

        </shape>
    </item>

</selector>
