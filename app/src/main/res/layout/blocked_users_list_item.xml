<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/blocked_user_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_text"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/blocked_user_item_button"
        android:layout_toStartOf="@+id/blocked_user_item_button"/>

    <ImageButton
        android:id="@+id/blocked_user_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:background="@drawable/simple_selector"
        android:src="@drawable/ic_highlight_remove_grey600_36dp" />

</RelativeLayout>
