<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msgTimeOutgoingAck"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/msgAckTimeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/msgAckTimeIcon"
            android:layout_width="@dimen/iv_item_detail_height_and_width"
            android:layout_height="@dimen/iv_item_detail_height_and_width"
            android:layout_margin="@dimen/iv_item_detail_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_msg_seen_black" />

        <TextView
            android:id="@+id/msgAckTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/msgDeliveredTimeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/msgDeliveredTimeIcon"
            android:layout_width="@dimen/iv_item_detail_height_and_width"
            android:layout_height="@dimen/iv_item_detail_height_and_width"
            android:layout_margin="@dimen/iv_item_detail_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_msg_delivered_black" />

        <TextView
            android:id="@+id/msgDeliveredTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text" />
    </LinearLayout>

</LinearLayout>